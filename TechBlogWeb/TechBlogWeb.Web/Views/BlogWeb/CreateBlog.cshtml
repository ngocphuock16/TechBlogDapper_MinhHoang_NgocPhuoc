@model TechBlogWeb.Domain.Request.Blog.CreateBlogRequest
@{
    ViewData["Title"] = "CreateBlog";
    Layout = "~/Views/Shared/_LayoutDashBoard.cshtml";
}

<h1>CreateBlog</h1>
<div class="main-container">
    <form asp-controller="BlogWeb" asp-action="CreateBlog" method="POST" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="ImageUrl"></label>
            </div>
            <div class="col-9">
                <input asp-for="ImageUrl" class="form-control" />

                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="PublishDate"></label>
            </div>
            <div class="col-9">
                <input asp-for="PublishDate" class="form-control" />

                <span asp-validation-for="PublishDate" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="Title"></label>
            </div>
            <div class="col-9">
                <input asp-for="Title" class="form-control" />

                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="ShortContent"></label>
            </div>
            <div class="col-9">
                <input asp-for="ShortContent" class="form-control" />

                <span asp-validation-for="ShortContent" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="FullContent"></label>
            </div>
            <div class="col-9">
                <input asp-for="FullContent" class="form-control" />

                <span asp-validation-for="FullContent" class="text-danger"></span>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="CategoryId"></label>
            </div>
            <div class="col-9">
                <p id="category"></p>
                <input asp-for="CategoryId" class="form-control" />

                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="BlogWeb" asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </form>
</div>

@section Scripts{
    <script src="~/techblogJS/createblog.js" asp-append-version="true"></script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}